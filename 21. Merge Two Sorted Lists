package LinkList;

public class Solution{
	public ListNode mergeTwoLists(ListNode n1,ListNode n2) {
		ListNode cur1=n1;
		ListNode cur2=n2;
		
		if(cur1==null) return n2;
		if(cur2==null) return n1;
		
		ListNode head=null;
		if(cur1.val<=cur2.val) {
			head=cur1;
			head.next=mergeTwoLists(cur1.next,cur2);
		}else {
			head=cur2;
			head.next=mergeTwoLists(cur1,cur2.next);
		}
		System.out.println(head.val);
		return head;
	}
	
	public static void main(String[] args) {
		LinkList l1=new LinkList();
		l1.addLastNode(1);
		l1.addLastNode(2);
		l1.addLastNode(4);
		
		LinkList l2=new LinkList();
		l2.addLastNode(1);
		l2.addLastNode(3);
		l2.addLastNode(4);
		
		Solution main=new Solution();
		ListNode nh=main.mergeTwoLists(l1.head,l2.head);
		while(nh!=null)
		{
			System.out.print(nh.val);
			nh=nh.next;
		}
		System.out.println();
	}
}
